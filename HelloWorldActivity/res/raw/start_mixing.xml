<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android1:columnCount="1"
    android1:orientation="vertical"
    tools:context="com.thalmic.android.sample.helloworld.HelloWorldActivity"
    tools:ignore="MergeRootFrame" >

    <TextView
        android1:id="@+id/textView1"
        android1:layout_column="0"
        android1:layout_gravity="center"
        android1:layout_row="0"
        android1:text="Large Text"
        android1:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android1:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android1:layout_width="100dp"
        android1:layout_column="0"
        android1:layout_gravity="left|center_vertical"
        android1:layout_row="0"
        android1:text="Previous / Button_Previous" />

    <Button
        android1:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android1:layout_width="100dp"
        android1:layout_column="0"
        android1:layout_gravity="right|center_vertical"
        android1:layout_row="0"
        android1:text="Next / Button_Next" />

</GridLayout>